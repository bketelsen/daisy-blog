---
import brian from '../assets/brian.jpg'
export interface Props {
	title: string;
    subtitle: string;
    tag: string;

}
const { title, subtitle, tag} = Astro.props;
---

<section class="py-20 md:py-28 " >
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap -mx-4 xl:items-center">
        <div class="w-full px-4 mb-16 md:w-1/2 md:mb-0">
          <span class="mb-2 uppercase badge badge-primary">{tag}</span>
          <h1 class="mb-6 text-3xl font-bold leading-tight tracking-tight font-title md:text-5xl lg:text-6xl">{title}</h1>
          <p class="mb-8 text-lg font-medium md:text-xl ">{subtitle}</p>

        </div>
        <div class="w-full px-4 md:w-1/2">
          <div class="relative mx-auto md:mr-0 max-w-max">
            <img class="absolute z-10 text-yellow-400 -left-8 -top-8 w-28 md:w-auto" src="flex-ui-assets/elements/circle3-blue.svg" alt="">
            <img class="absolute z-10 text-blue-500 -right-7 -bottom-8 w-28 md:w-auto" src="flex-ui-assets/elements/dots3-yellow.svg" alt="">
            <img class="relative rounded-7xl" src={brian} alt="Brian Ketelsen">
          </div>
        </div>
      </div>
    </div>
  </section>

