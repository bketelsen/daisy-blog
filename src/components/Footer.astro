---
import { MY_YOUTUBE, MY_TWITTER_HANDLE, REPO_URL } from '@data/siteConfig';
import brianDark from '../assets/brian-dark.svg'
import { footerNav } from "@data/nav"

---

<section class="bg-white">

  <div class="overflow-hidden bg-coolGray-900" style="background-image: url('/flex-ui-assets/elements/pattern-dark.svg'); background-position: center;">
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap pt-24 pb-12 -mx-4 lg:items-center">
        <div class="w-full px-4 md:w-2/3">
          <a class="block mb-12 max-w-max" href="#">
            <img class="h-10" src={brianDark} alt="Brian Ketelsen">
          </a>
          <div class="flex flex-wrap mb-12 -mx-3 md:mb-0 md:-mx-6">
            {footerNav.map(item => (
            <div class="w-full p-3 md:w-auto md:py-0 md:px-6"><a class="inline-block font-medium text-coolGray-400 hover:text-coolGray-500" href={item.slug}>{item.title}</a></div>
            ))}

          </div>
        </div>
        <div class="w-full px-4 md:w-1/3">
          <div class="flex flex-wrap">
            <div class="w-full py-1 lg:flex-1 lg:py-0 lg:mr-3">
              <input class="w-full h-12 px-3 border rounded-lg outline-none text-coolGray-900 placeholder-coolGray-500 border-coolGray-200 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 shadow-xsm" placeholder="Your email">
            </div>
            <div class="w-full py-1 lg:w-auto lg:py-0"><a class="inline-block w-full px-5 py-4 font-medium leading-4 text-center bg-yellow-200 rounded-md shadow-sm text-coolGray-800 hover:bg-yellow-600 focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50" href="#">Subscribe</a></div>
          </div>
        </div>
      </div>
    </div>
    <div class="border-b border-coolGray-800"></div>
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap items-center py-12 -mx-4 md:pb-24">
        <div class="w-full px-4 md:w-1/2">
          <p class="mb-3 font-medium md:mb-0 text-coolGray-400">Â© 2022 Brian Ketelsen. All rights reserved.</p>
        </div>
        <div class="w-full px-4 md:w-1/2">
          <div class="flex flex-wrap justify-end -mx-3 md:-mx-4">
            <div class="w-full p-3 md:w-auto md:py-0 md:px-4"><a class="inline-block font-medium text-coolGray-400 hover:text-coolGray-500" href="#">Terms</a></div>
            <div class="w-full p-3 md:w-auto md:py-0 md:px-4"><a class="inline-block font-medium text-coolGray-400 hover:text-coolGray-500" href="#">Privacy</a></div>
            <div class="w-full p-3 md:w-auto md:py-0 md:px-4"><a class="inline-block font-medium text-coolGray-400 hover:text-coolGray-500" href="#">Cookies</a></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
