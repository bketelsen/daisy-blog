---
  import { Image } from 'astro-eleventy-img';

export interface Props {
	title: string;
    name: string;
    bio: string;
	description: string;
	permalink: string;
}
const { title, description, permalink , name, bio} = Astro.props;
---
<section class="text-base-content body-font">
    <div class="container flex flex-col px-5 mx-auto py-14">
      <div class="mx-auto lg:w-4/6">
        <div class="overflow-hidden rounded-lg h-94">
            <Image src="src/assets/brian.jpg" alt="Brian Ketelsen"/>
        </div>
        <div class="flex flex-col mt-10 sm:flex-row">
          <div class="text-center sm:w-1/3 sm:pr-8 sm:py-8">
            <div class="inline-flex items-center justify-center w-20 h-20 text-gray-400 bg-gray-200 rounded-full">
                <Image src="src/assets/gopher.png" alt="Brian Ketelsen"/>

            </div>
            <div class="flex flex-col items-center justify-center text-center">
              <h2 class="mt-4 text-lg font-medium text-gray-900 title-font">{name}</h2>
              <div class="w-12 h-1 mt-2 mb-4 bg-indigo-500 rounded"></div>
              <p class="text-base">{bio}</p>
            </div>
          </div>
          <div class="pt-4 mt-4 text-center border-t border-gray-200 sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l sm:border-t-0 sm:mt-0 sm:text-left">
            <p class="mb-4 text-lg leading-relaxed">{description}</p>
            <a class="inline-flex items-center text-accent">Learn More
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
