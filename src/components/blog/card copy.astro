---
import type { GhostPostOrPage } from '@lib/ghost';
import Date from "@components/utilities/Date";
import { Picture } from "astro-imagetools/components";
const post: GhostPostOrPage = Astro.props.post

---

<div class="w-full px-4 pb-4 shadow-xl hover:shadow-2xl md:w-1/2 lg:w-1/3">
  <a class="block mb-6 overflow-hidden rounded-md" href={`/blog/${post.slug}`}>
    {post.feature_image && (
    <Picture
    src={post.feature_image}
    alt={post.title}
    />
    )}
  </a>
  <p class="mb-2 font-medium text-primary">{post.authors[0].name} â€¢
    <Date date={post.published_at} />
  </p>
  <a class="inline-block mb-4 text-2xl font-bold leading-tight font-title hover:underline"
    href={`/blog/${post.slug}`}>{post.title}</a>
  <p class="mb-4 text-base font-medium md:text-lg text-base-content">{post.excerpt}</p>
</div>
