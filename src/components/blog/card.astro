---
import type { Post } from '@data/post';
import Date from "@components/utilities/Date";

const post: Post = Astro.props.post
---

<div class="w-full px-4 pb-4 shadow-xl md:w-1/2 lg:w-1/3">
  <a class="block mb-6 overflow-hidden rounded-md" href={`/${post.slug}`}>
    {post.img && post.imgWidth && post.imgHeight ?
    <img src={post.img.toString()} alt={post.title} width={post.imgWidth} height={post.imgHeight}
      class="rounded bg-base-200" />
    : post.img &&
    <img src={post.img.toString()} alt={post.title} class="rounded bg-base-200" />
    }
  </a>
  <p class="mb-2 font-medium text-coolGray-500">{post.author} â€¢
    <Date date={post.date} />
  </p>
  <a class="inline-block mb-4 text-2xl font-bold leading-tight font-title text-coolGray-800 hover:text-coolGray-900 hover:underline"
    href={`/${post.slug}`}>{post.title}</a>
  <p class="mb-4 text-base font-medium md:text-lg text-coolGray-400">{post.desc}</p>
  <a class="inline-block px-3 py-1 text-xs font-medium leading-5 text-blue-500 uppercase bg-blue-100 rounded-full shadow-sm hover:text-blue-600 hover:bg-blue-200"
    href="#">{post.category}</a>
</div>
