---
import { published } from "@data/post"
import Blog from "@layouts/blog";
import Features from "@components/Features";
import Card from "@components/blog/card";


const markdownFiles = await Astro.glob('../content/**/*.md')
const posts = published( markdownFiles );
---

<Blog>
<Features
	title="My Title"
	subtitle="My Subtitle"
></Features>

<div class="relative px-4 pt-16 pb-20 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
	<div class="absolute inset-0">
	  <div class="bg-base-300 h-1/3 sm:h-2/3"></div>
	</div>
	<div class="relative mx-auto max-w-7xl">
	  <div class="text-center">
		<h2 class="text-3xl font-extrabold tracking-tight text-base-content sm:text-4xl">From the blog</h2>
		<p class="max-w-2xl mx-auto mt-3 text-xl text-base-content sm:mt-4">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ipsa libero labore natus atque, ducimus sed.</p>
	  </div>
	  <div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none">

		{posts.map((p) =>
			<Card post={p} />
		)}
	  </div>
	</div>
  </div>

</Blog>
