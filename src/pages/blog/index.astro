---
import { published } from "@data/post"
import Blog from "@layouts/blog";
import Preview from "@components/blog/preview";

const markdownFiles = await Astro.glob('../../content/blog/**/*.md')
const posts = published( markdownFiles );
---

<Blog title="Blog">

  <section class="py-16 bg-base-100 md:py-24 lg:pb-52">
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap items-center mb-16">
        <div class="w-full mb-8 md:w-3/4 md:mb-0">
          <span class="mb-2 uppercase badge badge-success">Blog</span>
          <h2 class="mb-4 text-4xl font-bold leading-tight tracking-tighter font-title md:text-5xl text-base-content">
            All articles</h2>
          <p class="text-lg font-medium md:text-xl text-base-content">It was too long for a tweet.</p>
        </div>
      </div>
      <div>
        {posts.map((p) =>
        <Preview post={p} />)}
      </div>
    </div>
  </section>


</Blog>
