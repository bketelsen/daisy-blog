---
import { published, withCategory, allCategories } from "@data/post"
import Paginator from "@components/Paginator";
import Blog from "@layouts/blog";
import Card from "@components/blog/card";

export async function getStaticPaths({paginate}) {
  const markdownFiles = await Astro.glob('../../content/blog/**/*.md');
  const categories = allCategories(markdownFiles);
  // For every tag, return a paginate() result.
  // Make sure that you pass `{params: {tag}}` to `paginate()`
  // so that Astro knows which tag grouping the result is for.
  return categories.map((category) => {
    const posts = withCategory(category.toLowerCase(), markdownFiles);
    return paginate(posts, {
      params: { category: category.toLowerCase() },
      pageSize: 1
    });
  });
}
const { page } = Astro.props;

const params = Astro.params;

---

<Blog title="Brian Ketelsen | Blog">
  <section class="py-16 bg-white md:py-24 lg:pb-52"
    style="background-image: url('/flex-ui-assets/elements/pattern-white.svg'); background-repeat: no-repeat; background-position: center top;">
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap items-center mb-16">
        <div class="w-full mb-8 md:w-3/4 md:mb-0">
          <span
            class="inline-block px-2 py-px mb-4 text-xs font-medium leading-5 text-blue-500 uppercase bg-blue-100 rounded-full shadow-sm font-title">{params.category}</span>
          <h3 class="mb-4 text-4xl font-bold leading-tight tracking-tighter md:text-5xl text-darkCoolGray-900">Category {params.category}</h3>
          <p class="text-lg font-medium md:text-xl text-coolGray-500">It was too long for a tweet.</p>
        </div>

      </div>
      <div class="flex flex-wrap -mx-4">
        {page.data.map((p) =>
        <Card post={p} />
        )}
      </div>
      <Paginator page={page} />

    </div>
  </section>
</Blog>


