---
import { published } from "@data/media"
import Blog from "@layouts/blog";
import Card from "@components/blog/card";


const markdownFiles = await Astro.glob('../../content/media/**/*.md')
const posts = published(markdownFiles);
---

<Blog title="Media">
  <section class="py-16 bg-white md:py-24 lg:pb-52"
    style="background-image: url('flex-ui-assets/elements/pattern-white.svg'); background-repeat: no-repeat; background-position: center top;">
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="flex flex-wrap items-center mb-16">
        <div class="w-full mb-8 md:w-3/4 md:mb-0">
          <span
            class="inline-block px-2 py-px mb-4 text-xs font-medium leading-5 text-blue-700 uppercase bg-blue-100 rounded-full shadow-sm font-title">Media</span>
          <h3 class="mb-4 text-4xl font-bold leading-tight tracking-tighter md:text-5xl text-darkCoolGray-900">Videos
            and Screencasts</h3>
          <p class="text-lg font-medium md:text-xl text-coolGray-500">Sometimes seeing is believing.</p>
        </div>

      </div>
      <div class="flex flex-wrap">
        {posts.map((p) =>

        <div class="flex flex-wrap py-8 md:flex-nowrap">
          <div class="flex flex-col flex-shrink-0 mb-6 md:w-64 md:mb-0">
            <span class="font-semibold text-gray-700 title-font">{p.host}</span>
            <span class="mt-1 text-sm text-gray-500">12 Jun 2019</span>
            {p.participants &&
            <span class="mt-3 text-sm text-gray-500">with</span>
            }
            {p.participants.map((part) =>
            <span class="mt-1 text-sm text-gray-500">{part}</span>
            )}

          </div>
          <div class="md:flex-grow">
            <h2 class="mb-2 text-2xl font-medium text-gray-900 title-font">{p.title}</h2>
            <p class="leading-relaxed">{p.desc}</p>
            <a class="inline-flex items-center mt-4 text-indigo-500">View
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        )}
      </div>
    </div>
  </section>

</Blog>
